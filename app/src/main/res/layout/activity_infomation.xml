<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List_Activity.Main_Activity.Activity_infomation"
    android:theme="@style/themeuser">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#EC2578">
        <ImageView
            android:id="@+id/btn_back_changeInfo_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back_arrow"
            android:padding="20dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infomation"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="27sp"
            android:textStyle="bold"/>
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/tv_fullName_changeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Full name: "
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_userName_changeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="User name: "
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_email_changeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Email: "
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_phone_changeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Phone number: "
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_address_changeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Address: "
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:textSize="18sp" />
            <Button
                android:id="@+id/btn_edit_changeInfo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/style_btn"
                app:backgroundTint="#EC2578"
                android:text="Edit"
                android:textSize="19sp"
                android:fontFamily="@font/open_sans"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>